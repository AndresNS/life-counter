{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["app/*"],
      "@common/*": ["src/common/*"],
      "@constants/*": ["src/constants/*"],
      "@features/*": ["src/features/*"],
      "@store/*": ["src/store/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
